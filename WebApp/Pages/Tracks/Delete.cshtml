@page "{id?}"
@model Project.Pages.Tracks.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{

    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Track</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Track.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Track.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Track.TrackId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Track.TrackId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Track.TrackId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Track.TrackId)
        </dd>
    </dl>

    <form method="post">
        <input type="submit" value="Delete" asp-route-id="@Model.Track.TrackId" class="btn btn-danger" /> |
        <a asp-page="/Tracks">Back to List</a>
    </form>
</div>
